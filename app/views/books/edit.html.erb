<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

<% end %>

<!--updateコントローラーを忘れない-->

<div>
<%= link_to "Show", show_book_path(@book.id) %>
<a>|</a>
<%= link_to "Back", books_path %>
</div>