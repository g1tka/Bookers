<h1>Books</h1>

<table border="0" >
  <thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <!--  @books = Book.all-->
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <!--ここは2回まちがえたところ。ブロック変数から↓-->
    <td><%= link_to "show", show_book_path(book.id) %></td>
    <td><%= link_to "edit", edit_book_path(book.id) %></td>
    <!--HTTPメソッドも指定する必要↓-->
    <td><%= link_to "destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    <!--↑フラッシュメッセージ-->
  </tr>
  <% end %>
  </tbody>
</table>

